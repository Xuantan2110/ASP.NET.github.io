@model IEnumerable<Tuple<TopCV.Models.JobListing, string>>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Salary)
            </th>
            <th>
                Email
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Item1.Location)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(j => j.Item1.UserId == ViewBag.UserId))
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Item1.Title)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Item1.Description)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Item1.CompanyName)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Item1.Position)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Item1.Salary)
                    </td>
                    <td>
                    @item.Item2
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Item1.Location.LocationName)
                    </td>
                    <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Item1.Id">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Item1.Id">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Item1.Id">Delete</a> |
                    <a class="btn btn-primary" asp-action="AppliedCandidates" asp-controller="JobListings" asp-route-id="@item.Item1.Id">Applied Candidates</a>
                    </td>
                </tr>
        }
    </tbody>
</table>