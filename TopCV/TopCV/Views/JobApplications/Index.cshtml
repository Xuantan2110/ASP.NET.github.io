@model IEnumerable<TopCV.Models.JobApplication>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                JobListing Name
            </th>
            <th>
                Upload File
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.JobListing.Title
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.UploadFile))
                    {
                        <a asp-action="Download" asp-controller="JobApplications" asp-route-id="@item.Id">@item.UploadFile</a>
                    }
                    else
                    {
                        <span>No file uploaded</span>
                    }
                </td>
                <td>
                    <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a class="btn btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a class="btn btn-primary" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>